{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": "./packages",
    "paths": {
      "@boa/base": [
        "./boa-base/src"
      ],
      "@boa/components": [
        "./boa-components/src"
      ],
      "@boa/components/*": [
        "./boa-components/src/*"
      ],
      "@boa/utils": [
        "./boa-utils/src"
      ],
      "@boa/test/*": [
        "./test/*"
      ]
    }
  },
}
